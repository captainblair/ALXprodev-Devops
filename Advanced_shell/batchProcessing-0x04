#!/bin/bash

# Create pokemon_data directory if it doesn't exist
mkdir -p pokemon_data

# List of Pokemon to fetch
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch a single Pokemon
fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."
    
    if curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" > "pokemon_data/$pokemon.json" && [ -s "pokemon_data/$pokemon.json" ]; then
        echo "Saved data to pokemon_data/$pokemon.json ✅"
    else
        echo "Failed to fetch data for $pokemon ❌"
    fi
}

# Start all fetches in parallel
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Wait for all background processes to complete
wait

echo "All Pokemon data fetching completed!"